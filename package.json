{
    "name": "ollama-desktop-app",
    "version": "1.0.0",
    "description": "Desktop application for interacting with Ollama models with public web access and advanced search",
    "main": "src/main/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "concurrently \"npm run watch\" \"npm run electron\"",
        "watch": "webpack --mode development --watch",
        "build": "webpack --mode production",
        "electron": "wait-on dist/renderer.js && electron .",
        "package": "electron-builder"
    },
    "keywords": [
        "ollama",
        "electron",
        "ai",
        "tor",
        "search"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "antd": "^5.12.0",
        "express": "^4.18.2",
        "axios": "^1.6.2",
        "ngrok": "^5.0.0-beta.2",
        "tor-request": "^3.1.0",
        "socks-proxy-agent": "^8.0.2",
        "express-basic-auth": "^1.2.1",
        "express-rate-limit": "^7.1.5",
        "cors": "^2.8.5",
        "cheerio": "^1.0.0-rc.12",
        "qrcode.react": "^3.1.0"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4",
        "babel-loader": "^9.1.3",
        "@babel/core": "^7.23.5",
        "@babel/preset-env": "^7.23.5",
        "@babel/preset-react": "^7.23.3",
        "css-loader": "^6.8.1",
        "style-loader": "^3.3.3",
        "concurrently": "^8.2.2",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.ollama.desktop",
        "productName": "Ollama Desktop",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "src/main/**/*",
            "package.json"
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png"
        }
    }
}